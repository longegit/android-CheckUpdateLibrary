<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/check_update_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkupdate_dp_120"
        android:scaleType="fitXY"
        android:src="@drawable/checkupdate_ic_dialog_top"/>

    <TextView
        android:id="@+id/check_update_version_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/checkupdate_dp_10"
        android:paddingLeft="@dimen/checkupdate_dp_20"
        android:paddingRight="@dimen/checkupdate_dp_20"
        android:paddingTop="@dimen/checkupdate_dp_10"
        android:textColor="@color/checkupdate_text_color_02"
        android:textSize="@dimen/checkupdate_sp_16"/>

    <TextView
        android:id="@+id/check_update_version_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/checkupdate_dp_10"
        android:paddingLeft="@dimen/checkupdate_dp_20"
        android:paddingRight="@dimen/checkupdate_dp_20"
        android:paddingTop="@dimen/checkupdate_dp_10"
        android:textColor="@color/checkupdate_text_color_02"
        android:textSize="@dimen/checkupdate_sp_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/checkupdate_dp_10"
        android:paddingLeft="@dimen/checkupdate_dp_20"
        android:paddingRight="@dimen/checkupdate_dp_20"
        android:paddingTop="@dimen/checkupdate_dp_10"
        android:text="@string/checkupdate_update_log"
        android:textColor="@color/checkupdate_text_color_01"
        android:textSize="@dimen/checkupdate_sp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkupdate_px_1"
        android:layout_marginBottom="@dimen/checkupdate_dp_10"
        android:background="@color/checkupdate_divider_color"/>

    <TextView
        android:id="@+id/check_update_version_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="4"
        android:paddingLeft="@dimen/checkupdate_dp_20"
        android:paddingRight="@dimen/checkupdate_dp_20"
        android:textColor="@color/checkupdate_text_color_02"
        android:textSize="@dimen/checkupdate_sp_16"/>

    <ProgressBar
        android:id="@+id/check_update_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/checkupdate_dp_20"
        android:layout_marginRight="@dimen/checkupdate_dp_20"
        android:layout_marginTop="@dimen/checkupdate_dp_10"
        android:progressDrawable="@drawable/checkupdate_layer_progress_bg"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkupdate_px_1"
        android:layout_marginTop="@dimen/checkupdate_dp_10"
        android:background="@color/checkupdate_divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkupdate_dp_50"
        android:orientation="horizontal">

        <com.qiangxi.checkupdatelibrary.view.CompatTextView
            android:id="@+id/check_update_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkupdate_not_update"
            android:textColor="@color/checkupdate_text_color_04"
            android:textSize="@dimen/checkupdate_sp_16"
            app:contentDrawable="@drawable/checkupdate_shape_tv_bg"
            app:rippleColor="@color/checkupdate_text_color_04"
            app:selectorDrawable="@drawable/checkupdate_selector_tv_bg"/>

        <View
            android:layout_width="@dimen/checkupdate_px_1"
            android:layout_height="match_parent"
            android:background="@color/checkupdate_divider_color"/>

        <com.qiangxi.checkupdatelibrary.view.CompatTextView
            android:id="@+id/check_update_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkupdate_update"
            android:textColor="@color/checkupdate_text_color_03"
            android:textSize="@dimen/checkupdate_sp_16"
            app:contentDrawable="@drawable/checkupdate_shape_tv_bg"
            app:rippleColor="@color/checkupdate_text_color_04"
            app:selectorDrawable="@drawable/checkupdate_selector_tv_bg"/>
    </LinearLayout>
</LinearLayout>